<% include ./partials/header %>
<div>
  <h1 id="nowplay" class="ui header">Now Showing</h1>
</div>

<div class="ui stackable four column grid">
  <% movies.forEach(function(movie){ %>
    <div class="column">
      <div class="ui fluid card">
        <div class="dimmable image">
          <div class="ui dimmer">
            <div class="content">
              <div class="center">
                <a href="/movies/<%= movie._id %>"><div class="ui primary button">Book Now</div></a>
              </div>
            </div>
          </div>
          <img src="<%= movie.image %>">
        </div>
      <div class="content">
        <a href="/movies/<%= movie._id %>" class="ui small header movie-title"><%= movie.title %></a>
      </div>
      </div>
    </div>
  <% }); %>
</div>

<% include ./partials/footer %>
